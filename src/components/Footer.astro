---
// src/components/Footer.astro
import { personalInfo } from '@/lib/mockData';
import { Button } from '@/components/ui/button';
// 1. Ya no necesitamos importar los íconos aquí.
//    Importamos nuestro componente contenedor en su lugar.
import SocialIcons from '@/components/SocialIcons.tsx';
---

<footer class="bg-background border-t border-border/50">
  <div class="container mx-auto px-6 py-8">
    <div class="flex flex-col md:flex-row justify-between items-center gap-8">
      <!-- Bloque 1: Nombre y Título -->
      <div class="text-center md:text-left">
        <a
          href="#hero"
          class="text-xl font-bold text-foreground hover:text-primary transition-colors"
          >{personalInfo.name}</a
        >
        <p class="text-sm text-muted-foreground">{personalInfo.title}</p>
      </div>

      <!-- Bloque 2: Enlaces de Navegación -->
      <nav class="flex gap-2">
        <Button
          variant="ghost"
          className="font-bold text-foreground hover:text-primary hover:bg-transparent transition-colors"
        >
          <a href="#projects">Proyectos</a>
        </Button>
      </nav>

      <!-- Bloque 3: Iconos Sociales (Ahora usando nuestro componente) -->
      <SocialIcons
        githubUrl={personalInfo.githubUrl}
        linkedinUrl={personalInfo.linkedinUrl}
        containerClassName="flex gap-2"
        iconClassName="w-5 h-5 text-primary transition-all duration-300 hover:scale-110 hover:text-accent mx-1"
        client:visible
      />
    </div>
  </div>
</footer>
