import { personalInfo } from '@/lib/mockData';
import SocialIcons from '@/components/SocialIcons.tsx';
---

<header class="fixed top-0 left-0 right-0 z-50 glass-morph">
  <div class="container mx-auto px-6 py-4 flex justify-between items-center">
    <!-- Nombre y TÃ­tulo -->
    <div>
      <h1 class="text-xl md:text-2xl font-bold text-foreground">
