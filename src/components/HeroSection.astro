---
// src/components/HeroSection.astro
import { personalInfo } from '@/lib/mockData';
import { ChevronDown } from 'lucide-react';
---

<section
  id="hero"
  class="relative flex items-center justify-center min-h-screen overflow-hidden"
>
  <!-- Fondo de Partículas Animadas -->
  <div class="absolute inset-0 z-0">
    <!-- Generamos 50 partículas con posiciones y animaciones aleatorias -->
    {
      Array.from({ length: 50 }).map(() => (
        <div
          class="absolute w-1 h-1 bg-blue-400/30 rounded-full animate-pulse"
          style={{
            left: `${Math.random() * 100}%`,
            top: `${Math.random() * 100}%`,
            animationDelay: `${Math.random() * 2}s`,
            animationDuration: `${2 + Math.random() * 3}s`,
          }}
        />
      ))
    }
  </div>

  <!-- Contenido Principal -->
  <div class="container relative z-10 px-6 mx-auto text-center">
    <div class="max-w-4xl mx-auto">
      <h1
        class="text-4xl font-bold leading-tight text-white md:text-6xl lg:text-7xl mb-6"
      >
        <span class="block">Hola, soy</span>
        <span
          class="block text-transparent bg-clip-text bg-gradient-to-r from-blue-400 via-blue-500 to-cyan-400 animate-pulse"
        >
          {personalInfo.name}
        </span>
      </h1>

      <h2
        class="mb-8 text-xl font-semibold text-blue-300 md:text-2xl lg:text-3xl animate-fade-in-up"
      >
        {personalInfo.title}
      </h2>

      <p
        class="mb-12 text-lg leading-relaxed text-gray-300 md:text-xl max-w-3xl mx-auto animate-fade-in-up"
      >
        {personalInfo.description}
      </p>

      <div
        class="flex flex-col items-center justify-center gap-4 sm:flex-row animate-fade-in-up"
      >
        <a
          href="#projects"
          class="px-8 py-4 font-semibold text-white transition-all duration-300 transform bg-blue-500 rounded-full hover:bg-blue-600 hover:scale-105 shadow-lg shadow-blue-500/25 hover:shadow-blue-500/40"
        >
          Ver Mis Proyectos
        </a>
        <a
          href={`mailto:${personalInfo.email}`}
          class="px-8 py-4 font-semibold text-blue-400 transition-all duration-300 transform border-2 border-blue-500 rounded-full hover:bg-blue-500 hover:text-white hover:scale-105"
        >
          Contactarme
        </a>
      </div>
    </div>

    <!-- Indicador de Scroll -->
    <div
      class="absolute left-1/2 transform -translate-x-1/2 bottom-8 animate-bounce"
    >
      <!-- Usamos 'client:load' para que el icono de React se renderice en el cliente -->
      <ChevronDown className="w-8 h-8 text-blue-400" client:load />
    </div>
  </div>
</section>
