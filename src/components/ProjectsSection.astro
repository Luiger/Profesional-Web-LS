---
// src/components/ProjectsSection.astro
import ProjectsContainer from '@/components/ProjectsContainer.tsx';
import ProjectCard from '@/components/ProjectCard.astro';
import { projects, projectCategories } from '@/lib/mockData';
---

<section id="projects" class="py-20 relative">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
        Mis <span
          class="bg-gradient-to-r from-blue-400 to-cyan-400 bg-clip-text text-transparent"
          >Proyectos</span
        >
      </h2>
      <p class="text-xl text-gray-400 max-w-3xl mx-auto">
        Una colecci√≥n de proyectos que demuestran mi experiencia.
      </p>
    </div>

    {
      /* Pasamos los datos como props Y renderizamos las tarjetas DENTRO del Island */
    }
    <ProjectsContainer
      projects={projects}
      categories={projectCategories}
      client:visible
    >
      {/* Astro renderiza todas las tarjetas en el servidor */}
      {
        projects.map((project, index) => (
          <div data-project-index={index}>
            <ProjectCard project={project} />
          </div>
        ))
      }
    </ProjectsContainer>
  </div>
</section>
